<!DOCTYPE html>
<html lang="en" ng-app="PantryApp">
<head>
    <meta charset="UTF-8">
    <title>Sign-up</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.8/angular-cookies.min.js" charset="utf-8"></script>
    <script src="js/app.js" charset="utf-8"></script>
</head>
<% if (!(user && user.id)) {%>
<body ng-controller="MainController">
    <h1>Sign up!</h1>
    <form action="/signup" method="post">
        <input type="text" name="account[username]" placeholder="Username">
        <input type="password" name="account[password]" placeholder="Password">
        <input type="submit">
    </form>

    <h1>...or Log In</h1>
    <form ng-submit="login()">
        <input type="text" ng-model="account.username">
        <input type="password" ng-model="account.password">
        <input type="submit">
    </form>
</body>

<% } else { %>
    <body ng-controller="MainController">
        <h1>{{header}} <%= user.name%></h1>
    </body>
<% } %>
</html>
